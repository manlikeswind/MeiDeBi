<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.AppRecommendActivity">

    <RelativeLayout
        android:id="@+id/app_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/app_back"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@mipmap/btn_toolbar_back_normal"/>
        <TextView
            android:padding="10dp"
            android:layout_toRightOf="@id/app_back"
            android:id="@+id/task_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_recommend_name"/>
    </RelativeLayout>
    <View
        android:id="@+id/app_title_separate"
        android:layout_below="@id/app_title_bar"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/separator"/>
    <ListView
        android:id="@+id/app_recommend_list"
        android:layout_below="@id/app_title_separate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></ListView>
</RelativeLayout>
