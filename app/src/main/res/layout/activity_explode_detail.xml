<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ExplodeDetailActivity">

    <RelativeLayout
        android:id="@+id/explode_detail_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/explode_detail_back"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@mipmap/btn_toolbar_back_normal"/>
        <TextView
            android:padding="10dp"
            android:layout_toRightOf="@id/explode_detail_back"
            android:id="@+id/explode_detail_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/favorable_app_name"/>
    </RelativeLayout>
    <View
        android:id="@+id/explode_detail_title_separate"
        android:layout_below="@id/explode_detail_title_bar"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/separator"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/explode_detail_title_separate">
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/explode_detail_url"
                android:padding="5dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="http://item.m.jd.com/product/10651584462.html"
                android:background="@color/colorTitle"/>
            <RelativeLayout
                android:id="@+id/explode_detail_img_section"
                android:layout_below="@id/explode_detail_url"
                android:layout_marginTop="10dp"
                android:background="@drawable/explode_detail_relative"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/explode_detail_img"
                    android:layout_centerInParent="true"
                    android:layout_width="100dp"
                    android:layout_height="100dp" />
            </RelativeLayout>
            <TextView
                android:id="@+id/explode_detail_tvTitle"
                android:layout_below="@id/explode_detail_img_section"
                android:layout_marginTop="10dp"
                android:textSize="12sp"
                android:text="标 题:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/explode_detail_name"
                android:padding="10dp"
                android:layout_below="@id/explode_detail_tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/explode_detail_relative"
                android:layout_marginTop="10dp"
                android:textSize="12sp"
                android:textStyle="bold"
                android:text="真维斯加绒保暖t恤男装2016冬装新款 摇粒绒立领"/>
            <TextView
                android:id="@+id/explode_detail_reason"
                android:layout_below="@id/explode_detail_name"
                android:layout_marginTop="10dp"
                android:text="推荐理由:"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/explode_detail_reason_content"
                android:padding="10dp"
                android:layout_below="@id/explode_detail_reason"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/explode_detail_relative"
                android:layout_marginTop="10dp"
                android:textSize="12sp"
                android:hint="请详情描述..."/>
            <TextView
                android:id="@+id/explode_detail_good_class"
                android:layout_below="@id/explode_detail_reason_content"
                android:layout_marginTop="10dp"
                android:text="商品分类:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:id="@+id/explode_detail_class"
                android:layout_below="@id/explode_detail_good_class"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
                <TextView
                    android:id="@+id/explode_detail_options"
                    android:padding="10dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@drawable/explode_detail_relative"
                    android:layout_marginTop="10dp"
                    android:textSize="12sp"
                    android:text="请选择商品分类"/>
                <ImageView
                    android:padding="10dp"
                    android:id="@+id/explode_detail_class_options"
                    android:src="@mipmap/arrow_down"
                    android:layout_gravity="center_vertical"
                    android:background="@color/separator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <TextView
                android:id="@+id/explode_detail_good_price"
                android:layout_below="@id/explode_detail_class"
                android:layout_marginTop="10dp"
                android:text="商品价格:"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/explode_detail_good_price_content"
                android:layout_toRightOf="@id/explode_detail_good_price"
                android:layout_below="@id/explode_detail_class"
                android:layout_marginTop="10dp"
                android:text="60.90"
                android:textSize="12sp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/orange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>
    </ScrollView>
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <RelativeLayout
            android:background="@color/separator"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/explode_detail_cancel"
                android:text="取消爆料"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </RelativeLayout>
        <RelativeLayout
            android:background="@color/orange"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/explode_detail_sure"
                android:text="立即爆料"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
