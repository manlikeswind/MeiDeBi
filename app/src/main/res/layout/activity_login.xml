<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sunshine.cl.meidebi.activity.LoginActivity">

    <RelativeLayout
        android:id="@+id/login_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/login_back"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@mipmap/btn_toolbar_back_normal"/>
        <TextView
            android:padding="10dp"
            android:layout_toRightOf="@id/login_back"
            android:id="@+id/login_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登录"/>
        <TextView
            android:id="@+id/register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:textSize="12sp"
            android:text="注册"/>
    </RelativeLayout>
    <View
        android:id="@+id/login_title_separate"
        android:layout_below="@id/login_title_bar"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/separator"/>
    <RelativeLayout
        android:layout_below="@id/login_title_separate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp">
        <EditText
            android:id="@+id/login_tv_name"
            android:layout_width="match_parent"
            android:drawableLeft="@mipmap/user_ico"
            android:drawablePadding="10dp"
            android:background="@null"
            android:layout_height="50dp"
            android:hint="手机号/用户名/邮箱"/>
        <TextView
            android:id="@+id/separate_user_name"
            android:layout_below="@id/login_tv_name"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/separator" />
        <EditText
            android:id="@+id/login_pwd"
            android:layout_width="match_parent"
            android:drawableLeft="@mipmap/psw_ico"
            android:layout_below="@+id/separate_user_name"
            android:drawablePadding="10dp"
            android:background="@null"
            android:layout_height="50dp"
            android:hint="请输入密码"/>

        <TextView
            android:id="@+id/separate_user_pwd"
            android:layout_below="@id/login_pwd"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/separator" />
        <TextView
            android:id="@+id/login_forget_pwd"
            android:layout_alignParentRight="true"
            android:text="忘记密码?"
            android:layout_marginTop="10dp"
            android:textSize="11sp"
            android:layout_below="@id/separate_user_pwd"
            android:textColor="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/login"
            android:layout_below="@id/login_forget_pwd"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:text="登录"
            android:gravity="center"
            android:background="@color/orange"
            android:layout_width="match_parent"
            android:layout_height="50dp" />
    </RelativeLayout>

</RelativeLayout>

