<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sunshine.cl.meidebi.activity.MyTaskActivity">

    <RelativeLayout
        android:id="@+id/task_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/task_back"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@mipmap/btn_toolbar_back_normal"/>
        <TextView
            android:padding="10dp"
            android:layout_toRightOf="@id/task_back"
            android:id="@+id/task_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/task_title"/>
        <TextView
            android:id="@+id/task_rule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:textSize="12sp"
            android:layout_centerVertical="true"
            android:text="@string/task_rule"/>
    </RelativeLayout>
    <View
        android:id="@+id/task_title_separate"
        android:layout_below="@id/task_title_bar"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/separator"/>
    <ScrollView
        android:layout_below="@id/task_title_separate"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#11000000">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/task_img"
                android:layout_width="match_parent"
                android:scaleType="centerCrop"
                android:background="@mipmap/task_img"
                android:layout_height="150dp" />
            <RelativeLayout
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:id="@+id/task_double_gift"
                android:layout_below="@id/task_img"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/task_double_gift_logo"
                    android:src="@mipmap/task_share"
                    android:background="@drawable/show_pic"
                    android:layout_width="60dp"
                    android:layout_height="60dp" />
                <TextView
                    android:id="@+id/task_double_gift_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/task_double_gift_logo"
                    android:layout_alignTop="@id/task_double_gift_logo"
                    android:layout_marginLeft="10dp"
                    android:text="分享双重好礼享不停"/>
                <TextView
                    android:id="@+id/task_double_gift_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="2"
                    android:textSize="11sp"
                    android:layout_below="@id/task_double_gift_title"
                    android:layout_toRightOf="@id/task_double_gift_logo"
                    android:layout_marginTop="3dp"
                    android:maxEms="10"
                    android:layout_marginLeft="10dp"
                    android:text="分享没得比给好友，或铜币贡献值双重奖励。"/>
                <Button
                    android:id="@+id/btn_task_double_task"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="再去赚"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dp"
                    android:layout_centerVertical="true"
                    android:textColor="@color/white"
                    android:background="@drawable/task_btn"/>
            </RelativeLayout>
            <RelativeLayout
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:id="@+id/task_show_gift"
                android:layout_below="@id/task_double_gift"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/task_show_gift_logo"
                    android:src="@mipmap/task_showorder"
                    android:background="@drawable/show_pic"
                    android:layout_width="60dp"
                    android:layout_height="60dp" />
                <TextView
                    android:id="@+id/task_show_gift_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/task_show_gift_logo"
                    android:layout_alignTop="@id/task_show_gift_logo"
                    android:layout_marginLeft="10dp"
                    android:text="晒单豪礼等你拿"/>
                <TextView
                    android:id="@+id/task_show_gift_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="2"
                    android:textSize="11sp"
                    android:layout_below="@id/task_show_gift_title"
                    android:layout_toRightOf="@id/task_show_gift_logo"
                    android:layout_marginTop="3dp"
                    android:maxEms="10"
                    android:layout_marginLeft="10dp"
                    android:text="分享购物体验，600铜币与您有约"/>
                <Button
                    android:id="@+id/btn_task_show_task"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="去做任务"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dp"
                    android:layout_centerVertical="true"
                    android:textColor="@color/white"
                    android:background="@drawable/task_btn"/>
            </RelativeLayout>
            <RelativeLayout
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:id="@+id/task_disclose_gift"
                android:layout_below="@id/task_show_gift"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/task_disclose_gift_logo"
                    android:src="@mipmap/task_baoliao"
                    android:background="@drawable/show_pic"
                    android:layout_width="60dp"
                    android:layout_height="60dp" />
                <TextView
                    android:id="@+id/task_disclose_gift_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/task_disclose_gift_logo"
                    android:layout_alignTop="@id/task_disclose_gift_logo"
                    android:layout_marginLeft="10dp"
                    android:text="你爆料，我送礼"/>
                <TextView
                    android:id="@+id/task_disclose_gift_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="2"
                    android:textSize="11sp"
                    android:layout_below="@id/task_disclose_gift_title"
                    android:layout_toRightOf="@id/task_disclose_gift_logo"
                    android:layout_marginTop="3dp"
                    android:maxEms="10"
                    android:layout_marginLeft="10dp"
                    android:text="发现尖货，立即爆料，150铜币等你拿"/>
                <Button
                    android:id="@+id/btn_task_disclose_task"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="去做任务"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dp"
                    android:layout_centerVertical="true"
                    android:textColor="@color/white"
                    android:background="@drawable/task_btn"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/task_description"
                android:layout_below="@id/task_disclose_gift"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:padding="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:layout_centerInParent="true"
                    android:text="(最终获铜币详情，请参考右上角“规则”说明)"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/task_show_section"
                android:layout_below="@id/task_description"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/task_show_guide"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="6dp"
                    android:layout_height="16dp"
                    android:background="@mipmap/btn_guide_normal"/>
                <TextView
                    android:id="@+id/task_show_section_title"
                    android:layout_toRightOf="@id/task_show_guide"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="小铜币换大礼展示区"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="更多礼品兑换+"
                    android:layout_marginTop="10dp"
                    android:textSize="11sp"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/orange"
                    android:layout_marginRight="10dp"/>
                <LinearLayout
                    android:id="@+id/task_show_gift_pic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@id/task_show_section_title">
                    <RelativeLayout
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/task_show_section_task1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/task_show_gift">
                        <ImageView
                            android:id="@+id/task_show_section_img1"
                            android:layout_centerInParent="true"
                            android:layout_marginBottom="20dp"
                            android:layout_marginTop="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:background="@mipmap/coupon_jd_one"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_weight="1"
                        android:layout_marginTop="10dp"
                        android:id="@+id/task_show_section_task2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/task_show_gift">
                        <ImageView
                            android:id="@+id/task_show_section_img2"
                            android:layout_centerInParent="true"
                            android:layout_marginBottom="20dp"
                            android:layout_marginTop="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:background="@mipmap/coupon_jd_two"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_weight="1"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:id="@+id/task_show_section_task3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/task_show_gift">
                        <ImageView
                            android:id="@+id/task_show_section_img3"
                            android:layout_centerInParent="true"
                            android:layout_marginBottom="20dp"
                            android:layout_marginTop="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:background="@mipmap/coupon_ymx"/>
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_below="@id/task_show_gift_pic"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_below="@id/task_show_section_task1"
                        android:layout_alignLeft="@id/task_show_section_task1"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="11sp"
                        android:text="京东300元礼品卡"/>
                    <TextView
                        android:layout_below="@id/task_show_section_task2"
                        android:layout_alignLeft="@id/task_show_section_task2"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="11sp"
                        android:text="京东100元礼品卡"/>
                    <TextView
                        android:layout_below="@id/task_show_section_task3"
                        android:layout_alignLeft="@id/task_show_section_task3"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="11sp"
                        android:text="亚马逊￥10元礼品卡"/>
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:padding="10dp"
                android:layout_below="@id/task_show_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:text="(礼品以实物为准)"/>
            </RelativeLayout>
        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
