<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="15dp">
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/all_item_img"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text1"
        android:id="@+id/all_item_tv1"
        android:textSize="18sp"
        android:lines="2"
        android:ellipsize="end"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/all_item_img"
        android:layout_marginLeft="10dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text2"
        android:layout_marginBottom="5dp"
        android:id="@+id/all_item_tv2"
        android:textSize="16sp"
        android:textColor="@color/orange"
        android:layout_below="@+id/all_item_tv1"
        android:layout_alignLeft="@+id/all_item_tv1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text3"
        android:maxEms="5"
        android:singleLine="true"
        android:ellipsize="end"
        android:id="@+id/all_item_tv3"
        android:layout_alignBottom="@+id/all_item_img"
        android:layout_alignLeft="@+id/all_item_tv2"
        android:layout_alignStart="@+id/all_item_tv2" />

    <TextView
        android:layout_width="1dp"
        android:layout_height="15dp"
        android:background="#33000000"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_alignBottom="@+id/all_item_tv4"
        android:layout_toRightOf="@+id/all_item_tv3"
        android:id="@+id/textView6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text4"
        android:id="@+id/all_item_tv4"
        android:layout_alignTop="@+id/all_item_tv3"
        android:layout_toRightOf="@+id/textView6"
        android:layout_toEndOf="@+id/textView6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/all_item_tv6"
        android:layout_alignBottom="@+id/all_item_iv1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:id="@+id/all_item_iv1"
        android:src="@mipmap/ic_comment_normal"
        android:scaleType="centerCrop"
        android:layout_marginRight="2dp"
        android:layout_alignBottom="@+id/all_item_tv4"
        android:layout_toLeftOf="@+id/all_item_tv6"
        android:layout_toStartOf="@+id/all_item_tv6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:id="@+id/all_item_tv5"
        android:layout_marginRight="27dp"
        android:layout_alignBottom="@+id/all_item_iv2"
        android:layout_toLeftOf="@+id/all_item_iv1"
        android:layout_toStartOf="@+id/all_item_iv1"
        android:layout_marginEnd="27dp" />

    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:id="@+id/all_item_iv2"
        android:src="@mipmap/ic_good_normal"
        android:scaleType="centerCrop"
        android:layout_marginRight="2dp"
        android:layout_alignBottom="@+id/all_item_tv4"
        android:layout_toLeftOf="@+id/all_item_tv5"
        android:layout_toStartOf="@+id/all_item_tv5" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#33000000"
        android:layout_below="@+id/all_item_img"
        android:layout_marginTop="15dp" />

</RelativeLayout>
