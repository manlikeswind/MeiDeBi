<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:id="@+id/my_show_done_item_iv"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/my_show_done_item_tv1"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/my_show_done_item_iv"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:textSize="10sp"
            android:id="@+id/my_show_done_item_tv2"
            android:layout_below="@+id/my_show_done_item_tv1"
            android:layout_alignLeft="@+id/my_show_done_item_tv1"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:textSize="10sp"
            android:id="@+id/my_show_done_item_tv3"
            android:layout_below="@+id/my_show_done_item_tv2"
            android:layout_alignLeft="@+id/my_show_done_item_tv2"
            android:layout_marginTop="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:textSize="10sp"
            android:id="@+id/my_show_done_item_tv4"
            android:layout_below="@+id/my_show_done_item_tv3"
            android:layout_alignLeft="@+id/my_show_done_item_tv3"
            android:layout_marginTop="5dp" />
    </RelativeLayout>
</RelativeLayout>
