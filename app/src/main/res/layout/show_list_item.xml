<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/show_img"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            app:riv_corner_radius="10dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorTitle"
            android:layout_alignTop="@id/show_img">
            <TextView
                android:padding="10dp"
                android:id="@+id/show_tv_title"
                android:text="晒单啦!澳洲第二单,12天顺利到手"
                android:textColor="@color/white"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"/>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/show_user_info"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/show_img">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/show_user_pic"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@mipmap/ic_launcher"
                app:civ_border_width="1dp"
                app:civ_border_color="@color/gray"/>
            <TextView
                android:id="@+id/show_user_name"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="wrap_content"
                android:text="aomaidaisu"
                android:layout_gravity="center_vertical"/>
            <RelativeLayout
                android:layout_gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/show_img_good"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/ic_good_normal"/>
                <TextView
                    android:id="@+id/show_tv_good"
                    android:layout_toRightOf="@id/show_img_good"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="7"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/show_img_comment"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/ic_comment_normal"/>
                <TextView
                    android:id="@+id/show_tv_comment"
                    android:layout_toRightOf="@id/show_img_comment"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="2"/>
            </RelativeLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/show_tv_content"
            android:layout_below="@id/show_user_info"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="自从踏上海淘之路,不到一个星期就又想剁手...."
            android:lines="4"
            android:ellipsize="end"/>

    </RelativeLayout>
</RelativeLayout>